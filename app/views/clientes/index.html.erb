<p id="notice"><%= notice %></p>
<div class="page-header">
 <div class="dropdown" style="float: right;">  
   <%= link_to new_cliente_path, :class => "btn btn-default dropdown-toggle" do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Cliente
    <% end %>
 </div>
  <h1>Clientes</h1>
</div>


<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover"> 
    <thead>
      <tr>
            <th>Nome</th>
            <th>Cpf</th>
            <th>Rg</th>
            <th>Telefone</th>
            <th>Endereco</th>
            <th>Sexo</th>
     </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @clientes.order(created_at: :desc), :class => "row-table") do |cliente| %>
                <td><%= cliente.nome %></td>
                <td><%= cliente.cpf %></td>
                <td><%= cliente.rg %></td>
                <td><%= cliente.telefone %></td>
                <td><%= cliente.endereco %></td>
                <td><%= cliente.sexo %></td>
                <td><%= link_to 'Exibir', cliente %></td>
                               
                         
      <% end %>
    </tbody>
  </table>

 
</div>


